<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/turnDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/lexend"
            android:text="Turn: "
            android:textColor="#EFE8E8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend"
            android:soundEffectsEnabled="false"
            android:text="Score"
            android:textColor="#EFE8E8"

            android:textSize="45sp"
            android:textStyle="bold" />


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            app:columnCount="2"
            app:rowCount="1">

            <TextView
                android:id="@+id/p1Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:fontFamily="@font/acme"
                android:text="P1 Name:  0 "
                android:textColor="#EFE8E8"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/p2Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/acme"
                android:text="P2 Name: 0 "
                android:textColor="#EFE8E8"
                android:textSize="28sp" />
        </androidx.gridlayout.widget.GridLayout>

        <TextView
            android:id="@+id/winnerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/lexend"
            android:text="Guru Wins !!"
            android:textColor="#EFE8E8"
            android:textSize="30sp"
            android:textStyle="bold" />
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fadeScrollbars="false"
            app:columnCount="3"
            app:rowCount="3">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:hapticFeedbackEnabled="true"
                android:onClick="check"
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:height="80dp"
                android:fontFamily="@font/lexend"
                android:onClick="check"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp"
                app:backgroundTint="#EFE8E8" />
        </androidx.gridlayout.widget.GridLayout>


        <ImageButton
            android:id="@+id/rstbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/restart"
            android:onClick="newGame"


            app:cornerRadius="5sp"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>